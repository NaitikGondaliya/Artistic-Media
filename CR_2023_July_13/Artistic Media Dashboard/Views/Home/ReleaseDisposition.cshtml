@model IEnumerable<Artistic_Media_Dashboard.Models.ReleaseDispositionModel>
@{
    ViewBag.Title = "Release Disposition";
}

<script src="https://code.jquery.com/jquery-1.11.0.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-12" style="margin-top:30px">
            <h2 style="display:inline">Disposition List</h2>
            <button id="addnewproj" style="display:inline;margin-bottom:5px;float:right" class="btn btn-primary">Add New</button>
        </div>
        <div class="col-md-12 table-responsive">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Release Disposition Id</th>
                    <th>AttachmentName</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ReleaseDispositionId)</td>
                        <td>
                            <span><a target="_blank" href="@item.AttachmentURL"> @item.filename</a></span><br />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.DispoDate)</td>
                        
                        <td>
                            @Html.ActionLink("Delete", "DeleteReleaseDisposition", new { id = item.ReleaseDispositionId },
                       htmlAttributes: new { onclick = "return confirm('Are you sure you wish to delete this record?');", @class = "btn btn-danger" })
                        </td>
                    </tr>
                    @*<tr>
                            <td>Centro comercial Moctezuma</td>
                            <td>Francisco Chang</td>
                            <td>Mexico</td>
                            <td>@Html.ActionLink("Delete", "Delete", new { id = 1 }, htmlAttributes: new { @class = "btn btn-danger" })</td>
                        </tr>*@
                }

            </table>
        </div>
    </div>
</div>




