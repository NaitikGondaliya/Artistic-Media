<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Artistic Media", "Dashboard", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Session["UserID"] != null)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Dashboard", "Home")</li>
                        <li>@Html.ActionLink("Project(s)", "Project", "Home")</li>
                        <li>@Html.ActionLink("Add Project", "AddProject", "Home")</li>
                        <li>@Html.ActionLink("Release Disposition(s)", "ReleaseDisposition", "Home")</li>
                        <li>@Html.ActionLink("Add Release Disposition", "AddReleaseDisposition", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav" style="float:right">
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    </ul>
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dashboard Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
